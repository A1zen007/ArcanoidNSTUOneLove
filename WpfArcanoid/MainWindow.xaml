<Window x:Class="WpfArcanoid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Арканоид" 
        Height="350" 
        Width="800"
        ResizeMode="NoResize">
    <Grid>
        <Canvas Name="gameCanvas" Background="Black"/>
        <StackPanel Name="gamePanel" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Начать игру" Click="RestartButton_Click"/>
            <Button Content="Сохранить игру" Click="SaveButton_Click"/>
            <Button Content="Загрузить игру" Click="LoadButton_Click"/>
            <Button Content="Выйти из игры" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
